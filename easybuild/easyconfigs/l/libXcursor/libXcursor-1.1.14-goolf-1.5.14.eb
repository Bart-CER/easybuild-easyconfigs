name = 'libXcursor'
version = '1.1.14'

homepage = "http://www.freedesktop.org/wiki/Software/xlibs"
description = "Xcursor is a simple library designed to help locate and load cursors"

toolchain = {'name': 'goolf', 'version': '1.5.14'}
toolchainopts = {'optarch': True}

sources = [SOURCE_TAR_GZ]
source_urls = [XORG_LIB_SOURCE]

sanity_check_paths = {
    'files': ['lib/%s' % x for x in ['libXcursor.a', 'libXcursor.so']],
    'dirs': [],
}

moduleclass = 'vis'
