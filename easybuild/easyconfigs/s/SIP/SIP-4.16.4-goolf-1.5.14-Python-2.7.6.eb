easyblock = 'ConfigureMakePythonPackage'

name = 'SIP'
version = '4.16.4'
versionsuffix= '-Python-2.7.6'

homepage = 'http://www.riverbankcomputing.com/software/sip/'
description = """
SIP is a tool that makes it very easy to create Python bindings for C and C++ 
libraries. It was originally developed to create PyQt, the Python bindings 
for the Qt toolkit, but can be used to create bindings for any C or C++ library. 
"""

toolchain = {'name': 'goolf', 'version': '1.5.14'} 

sources = [SOURCELOWER_TAR_GZ]
source_urls = ['http://sourceforge.net/projects/pyqt/files/sip/sip-4.16.4']

dependencies = [('Python', '2.7.6')]

preconfigopts = "mkdir -p %(installdir)s/bin %(installdir)s/lib %(installdir)s/include %(installdir)s/sip && "
configopts = " configure.py -b=%(installdir)s/bin -d=%(installdir)s/lib -e=%(installdir)s/include -v=%(installdir)s/sip"

buildininstalldir=True
modextrapaths={
            'CPATH':'include',
            'LD_LIBRARY_PATH':'lib',
            'LIBRARY_PATH':'lib',
}

moduleclass = 'lang'
